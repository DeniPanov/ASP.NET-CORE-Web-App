@using ApiaryDiary.Controllers.Models.Apiaries
@model EditApiaryPostModel

<div class="container-fluid">
    <form asp-controller="Apiaries" asp-action="Edit" method="post" class="form">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control col-md-4" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BeekeepingType"></label>
            <select asp-for="BeekeepingType" class="form-control col-md-4"
                    asp-items="@Html.GetEnumSelectList<BeekeepingType>()"></select>
            <span asp-validation-for="BeekeepingType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Capacity"></label>
            <input asp-for="Capacity" class="form-control col-md-4" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="form-group invisible">
            <label asp-for="Id"></label>
            <input asp-for="Id" value="@Model.Id" class="form-control col-md-4" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <br />

        <input asp-route-id="@Model.Id" type="submit" value="Edit" class="btn btn-warning" />
        <input asp-action="ViewAll" type="submit" value="Back" class="btn btn-info ml-2" />
    </form>
</div>
