@using ApiaryDiary.Controllers.Models.Beehives
@model EditBeehivePostModel

    <form asp-controller="Beehives" asp-action="Edit" method="post" class="form">
        <div class="form-group">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control col-md-4" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SystemType"></label>
            <select asp-for="SystemType" class="form-control col-md-4"
                    asp-items="@Html.GetEnumSelectList<SystemType>()"></select>
            <span asp-validation-for="SystemType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BeehiveType"></label>
            <select asp-for="BeehiveType" class="form-control col-md-4"
                    asp-items="@Html.GetEnumSelectList<BeehiveType>()"></select>
            <span asp-validation-for="BeehiveType" class="text-danger"></span>
        </div>

        <br />

        <input asp-route-id="@Model.Id" type="submit" value="Edit" class="btn btn-warning" />
        <input asp-action="ViewAll" type="submit" value="Back" class="btn btn-info ml-2" />
    </form>
