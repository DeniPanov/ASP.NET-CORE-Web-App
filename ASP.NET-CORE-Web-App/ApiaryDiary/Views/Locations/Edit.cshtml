@using ApiaryDiary.Controllers.Models.Locations
@model EditLocationPostModel

    <form asp-controller="Locations" asp-action="Edit" method="post" class="form">
        <div class="form-group">
            <label asp-for="Settlement"></label>
            <input asp-for="Settlement" class="form-control col-md-4" />
            <span asp-validation-for="Settlement" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Altitude"></label>
            <input asp-for="Altitude" class="form-control col-md-4" />
            <span asp-validation-for="Altitude" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" for="exampleFormControlTextarea1"></label>
            <textarea asp-for="Description" class="form-control col-md-4" id="exampleFormControlTextarea1" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <br />

        <input asp-route-id="@Model.Id" type="submit" value="Edit" class="btn btn-warning" />
        <input asp-action="ViewAll" type="submit" value="Back" class="btn btn-info ml-2" />
    </form>
